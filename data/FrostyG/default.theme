ThemeDescription="FrostyAgain (Snow for five days)"
ThemeAuthor="mathias.hasselmann@gmx.de"
Gradients="menubg.xpm menusel.xpm switchbg.xpm taskbarbg.xpm dialogbg.xpm \
	buttonA.xpm buttonI.xpm \
	taskbuttonbg.xpm taskbuttonactive.xpm taskbuttonminimized.xpm \
	toolbuttonbg.xpm workspacebuttonbg.xpm workspacebuttonactive.xpm"
Look=metal

ColorToolButton=#445560
ColorActiveWorkspaceButton=#600
ColorNormalWorkspaceButton=#060

#TitleBarCentered=1
TitleBarJustify=50
TitleBarHeight=16
TitleButtonsLeft="i"
TitleButtonsRight="xm"
TitleButtonsSupported="sirmrx"

BorderSizeX=3
BorderSizeY=3
CornerSizeX=28
CornerSizeY=28
DlgBorderSizeX=3
DlgBorderSizeY=3

TaskBarClockLeds=0

# borders
ColorNormalBorder="#666666"
ColorActiveBorder="#556670"

# titlebar
TitleFontName="-adobe-helvetica-bold-r-*-*-12-*-*-*-*-*-*-*"
ColorNormalTitleBar="#666666"
ColorActiveTitleBar="#556670"
ColorNormalTitleBarText="#000000"
ColorActiveTitleBarText="#ffffff"
ColorNormalTitleButton="#666666"

# quick switch
QuickSwitchFontName="-adobe-helvetica-bold-r-*-*-18-*-*-*-*-*-*-*"
ColorQuickSwitch="#556670"
ColorQuickSwitchText="#cccccc"

# menus
MenuFontName="-adobe-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*"
ColorNormalMenu="#cccccc"
ColorActiveMenuItem="#445560"
ColorNormalMenuItemText="#223340"
ColorActiveMenuItemText="#cccccc"
ColorDisabledMenuItemText="#999999"

# move / size indicator
StatusFontName="-b&h-lucidatypewriter-bold-r-*-*-14-*-*-*-*-*-*-*"
ColorMoveSizeStatus="#556670"
ColorMoveSizeStatusText="#cccccc"

# tooltips
ToolTipFontName="-adobe-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*"
ColorToolTip="#cccccc"
ColorToolTipText="#223340"

# dialog
LabelFontName="-adobe-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*"

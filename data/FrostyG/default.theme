ColorLabel="#cccccc"
ColorLabelText="#223340"

# buttons
NormalButtonFontName="-adobe-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*"
ActiveButtonFontName="-adobe-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*"
ColorNormalButton="#445560"
ColorActiveButton="#556670"
ColorNormalButtonText="#cccccc"
ColorActiveButtonText="#ffffff"

# listbox
ListBoxFontName="-adobe-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*"
ColorListBox="#cccccc"
ColorListBoxText="#445560"
ColorListBoxSelection="#556670"
ColorListBoxSelectionText="#ffffff"

# scrollbar
ColorScrollBar="#999999"
ColorScrollBarArrow="#cccccc"
ColorScrollBarSlider="#cccccc"

# taskbar
NormalTaskBarFontName="-adobe-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*"
ActiveTaskBarFontName="-adobe-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*"
MinimizedWindowFontName="-adobe-helvetica-medium-r-*-*-12-*-*-*-*-*-*-*"
ColorDefaultTaskBar="#666666"
ColorNormalTaskBarApp="#445560"
ColorActiveTaskBarApp="#556670"
ColorMinimizedTaskBarApp="#666666"
ColorInvisibleTaskBarApp="#555555"
ColorNormalTaskBarAppText="#cccccc"
ColorActiveTaskBarAppText="#ffffff"
ColorMinimizedTaskBarAppText="#cccccc"
ColorInvisibleTaskBarAppText="#cccccc"

# input
ColorInput="#707070"
ColorInputText="#cccccc"
ColorInputSelection="#334450"
ColorInputSelectionText="#cccccc"

# clock
ClockFontName="-b&h-lucidatypewriter-medium-r-*-*-12-*-*-*-*-*-*-*"
#ColorClock="#666666"
ColorClock=""
ColorClockText="#cccccc"

# apm status
ApmFontName="-b&h-lucidatypewriter-medium-r-*-*-12-*-*-*-*-*-*-*"
#ColorApm="#666666"
ColorApm=""
ColorApmText="#cccccc"

# cpu status
#ColorCPUStatusIdle="#666666"
ColorCPUStatusIdle=""
ColorCPUStatusUser="#33cc00"
ColorCPUStatusSystem="#cc9900"
ColorCPUStatusNice="#cc0000"

# network status
#ColorNetIdle="#666666"
